{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment":{
      "type": "string"
    },
    "vnetName": {
      "type": "string"
    },
    "addressPrefix": {
      "type": "string"
    },
    "subnetPrefixes": {
      "type": "array"
    }
  },
  "variables": {
    "vnetName": "[concat('fei-', parameters('environment'), '-vnet-', parameters('vnetName'))]",
    "nsgName": "[concat('fei-', parameters('environment'), '-nsg-', parameters('vnetName'))]",
    "subnets": {
      "type": "array",
      "copy": [
        {
          "name": "value",
          "count": "[length(parameters('subnetPrefixes'))]",
          "input": {
            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), concat('fei-', parameters('environment'), '-snet-',parameters('vnetName') , copyIndex('value')))]"
          }
        }
      ]
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[concat('fei-', parameters('environment'), '-nsg-', parameters('vnetName'))]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2018-03-01",
      "properties": {
        "securityRules": [
          {
            "name": "SSH",
            "properties": {
              "description": "Allows SSH traffic",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[variables('vnetName')]",
      "apiVersion": "2018-04-01",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
      ],
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('addressPrefix')]"
          ]
        },
        "copy": [
          {
            "name": "subnets",
            "count": "[length(parameters('subnetPrefixes'))]",
            "input": {
              "name": "[concat('fei-', parameters('environment'), '-snet-',parameters('vnetName') , copyIndex('subnets'))]",
              "properties": {
                "addressPrefix": "[parameters('subnetPrefixes')[copyIndex('subnets')]]",
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                }
              }
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "subnets": {
      "type": "array",
      "value": "[variables('subnets')]" 
    }
  }
}